@page "/employeeedit"
@page "/employeeedit/{EmployeeId}"

@using BethanysPieShopHRM.Shared
@inherits EmployeeEditBase

<section class="employee-edit">
    <h1 class="page-title">Details for @Employee.FirstName @Employee.LastName</h1>
    <EditForm Model="@Employee">
        <div class="form-group row">
            <label for="lastName" class="col-sm-3">Last name: </label>
            <InputText id="lastName" class="form-control col-sm-8"
                       placeholder="Enter last name"
                       @bind-Value="@Employee.LastName">
            </InputText>
        </div>

        <div class="form-group row">
            <label for="firstName" class="col-sm-3">First name: </label>
            <InputText id="firstName" class="form-control col-sm-8"
                       placeholder="Enter first name"
                       @bind-Value="@Employee.FirstName">
            </InputText>
        </div>

        <div class="form-group row">
            <label for="birthdate" class="col-sm-3">Birthdate: </label>
            <InputDate id="birthdate" class="form-control col-sm-8"
                       placeholder="Enter birthdate"
                       @bind-Value="@Employee.BirthDate">
            </InputDate>
        </div>

        <div class="form-group row">
            <label for="email" class="col-sm-3">Email: </label>
            <InputText id="email" class="form-control col-sm-8"
                       placeholder="Enter email"
                       @bind-Value="@Employee.Email">
            </InputText>
        </div>

        <div class="form-group row">
            <label for="street" class="col-sm-3">Street: </label>
            <InputText id="street" class="form-control col-sm-8"
                       placeholder="Enter street"
                       @bind-Value="@Employee.Street">
            </InputText>
        </div>

        <div class="form-group row">
            <label for="zip" class="col-sm-3">Zip code: </label>
            <InputText id="zip" class="form-control col-sm-8"
                       placeholder="Enter zip code"
                       @bind-Value="@Employee.Zip">
            </InputText>
        </div>

        <div class="form-group row">
            <label for="city" class="col-sm-3">City: </label>
            <InputText id="city" class="form-control col-sm-8"
                       placeholder="Enter city"
                       @bind-Value="@Employee.City">
            </InputText>
        </div>
    </EditForm>
</section>