@page "/employeeoverview"
@inherits EmployeeOverviewBase

<h1 class="modal-title">All employees</h1>

@if (Employees == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <th></th>
        <th>Employee ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
        </thead>

        <tbody>
        @foreach (var employee in Employees)
        {
            <tr>
                <td><img src=@($"images/{employee.EmployeeId}-small.jpg")
                         class="rounded-circle"/></td>
                <td>@employee.EmployeeId</td>
                <td>@employee.FirstName</td>
                <td>@employee.LastName</td>
                <td>
                    <a href="@($"/employeedetail/{employee.EmployeeId}")"
                       class="btn btn-primary">
                        Detail
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
